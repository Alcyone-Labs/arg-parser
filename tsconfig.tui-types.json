{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "include": [
    "./src/tui/**/*.ts",
    "./src/tui/**/*.tsx"
  ],
  "exclude": [
    "./dist/**/*"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "jsx": "preserve",
    "jsxImportSource": "@opentui/solid",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false
  }
}