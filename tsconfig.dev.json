{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts",
    "./script/**/*.ts",
    "./examples/**/*.ts"
  ],
  "exclude": ["./dist/**/*"],
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist-dev",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleResolution": "Bundler",

    "paths": {
      "#src/*": ["./src/*"]
    }
  }
}
