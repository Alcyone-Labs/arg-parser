{
  "name": "@alcyone-labs/arg-parser-mcp",
  "version": "3.0.0-beta.1",
  "description": "MCP (Model Context Protocol) plugin for @alcyone-labs/arg-parser",
  "keywords": [
    "Arg Parser",
    "CLI",
    "MCP",
    "Model Context Protocol",
    "Plugin"
  ],
  "license": "MIT",
  "author": "Nicolas Embleton <nicolas.embleton@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:Alcyone-Labs/arg-parser.git"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist/index.cjs",
    "dist/index.cjs.map",
    "dist/index.d.ts",
    "dist/index.d.ts.map",
    "dist/index.min.mjs",
    "dist/index.min.mjs.map",
    "dist/index.mjs",
    "dist/index.mjs.map",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build:types": "tsc --project tsconfig.json --emitDeclarationOnly",
    "build:cjs": "cross-env VITE_BUILD_FORMAT=cjs vite build --config vite.config.build.ts",
    "build:esm": "cross-env VITE_BUILD_FORMAT=es VITE_MINIFY_BUILD=false vite build --config vite.config.build.ts",
    "build:min": "cross-env VITE_BUILD_FORMAT=es VITE_MINIFY_BUILD=true vite build --config vite.config.build.ts",
    "build": "pnpm clean && pnpm run build:types && pnpm run build:cjs && pnpm run build:esm && pnpm run build:min",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "check:types": "tsc --project ./tsconfig.json --noEmit",
    "prepublishOnly": "pnpm build && pnpm test"
  },
  "dependencies": {
    "@alcyone-labs/arg-parser": "workspace:*",
    "@alcyone-labs/simple-mcp-logger": "^1.2.1",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "cross-env": "^10.1.0",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "npm:rolldown-vite@^7.3.1",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "@alcyone-labs/arg-parser": "^3.0.0-beta.1"
  }
}
