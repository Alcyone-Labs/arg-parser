{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "include": ["./src/**/*.ts"],
  "exclude": ["./tests/**/*.ts", "./dist/**/*"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "@opentui/solid"
  }
}
