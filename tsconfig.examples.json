{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "include": ["./examples/**/*.ts"],
  "exclude": ["./tests/**/*.ts", "./script/**/*.ts", "./dist/**/*"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist-examples",
    "noEmit": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,

    "paths": {
      "@alcyone-labs/arg-parser": ["./src/index.ts"]
    }
  }
}
